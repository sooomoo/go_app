docker run -d \
  --name postgres_dev \
  -e POSTGRES_PASSWORD=abc12345 \
  -e POSTGRES_USER=postgres \
  -e POSTGRES_DB=dev_db \
  -p 5432:5432 \
  -v pg_data:/var/lib/postgresql/data \
  postgres

# --restart=always
docker run -d --restart=always\
  --name postgres_dev \
  -e POSTGRES_PASSWORD=abc12345 \
  -e POSTGRES_USER=postgres \
  -e POSTGRES_DB=dev_db \
  -p 5432:5432 \
  -v pg_data:/var/lib/postgresql/data \
  postgres